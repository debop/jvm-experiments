	<session-factory>

		<!--<property name="connection.driver_class">org.postgresql.Driver</property>-->
		<!--<property name="dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>-->
		<!--<property name="connection.url">jdbc:postgresql://localhost/hibernate</property>-->
		<!--<property name="connection.username">root</property>-->
		<!--<property name="connection.password">root</property>-->

		<!--<property name="connection.driver_class">com.mysql.sql.Driver</property>-->
		<!--<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>-->
		<!--<property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>-->
		<!--<property name="connection.username">root</property>-->
		<!--<property name="connection.password">root</property>-->

		<!--<property name="connection.driver_class">org.h2.Driver</property>-->
		<!--<property name="dialect">org.hibernate.dialect.H2Dialect</property>-->
		<!--<property name="connection.url">jdbc:h2:mem:tempdb</property>-->
		<!--<property name="connection.username">sa</property>-->
		<!--<property name="connection.password"></property>-->

		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="connection.url">jdbc:hsqldb:mem:tempdb</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>

		<!--
		<property name="connection.provider_class">
			kr.ecsp.data.hibernate.provider.BoneCPConnectionProvider4
		</property>
		-->

		<property name="connection.pool_size">5</property>
		<property name="current_session_context_class">thread</property>

		<property name="transaction.factory_class">
			org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory
		</property>


		<property name="hibernate.cache.region.factory_class">
			org.hibernate.cache.ehcache.EhCacheRegionFactory
		</property>
		<property name="cache.use_second_level_cache">true</property>
		<property name="cache.use_query_cache">true</property>

		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<property name="hbm2ddl.auto">create</property>

		<!-- one-to-many bidirectional association -->
		<mapping resource="org/hibernate/example/domain/model/Category.hbm.xml"/>
		<mapping resource="org/hibernate/example/domain/model/Event.hbm.xml"/>

		<!-- have 2 component -->
		<mapping resource="org/hibernate/example/domain/model/User.hbm.xml"/>

		<!-- join component -->
		<mapping resource="org/hibernate/example/domain/model/join/Customer.hbm.xml"/>

		<mapping package="org.hibernate.example.domain.model"/>

		<!-- JPA annotation -->
		<mapping class="org.hibernate.example.domain.model.StateEntityImpl"/>


		<mapping class="org.jpa.example.domain.model.JpaUser"/>

	</session-factory>
</hibernate-configuration>